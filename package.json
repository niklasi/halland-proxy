{
  "name": "proxy",
  "version": "1.0.0",
  "description": "x-platform web debugging proxy and testing tool.",
  "scripts": {
    "postinstall": "install-app-deps",
    "dev": "babel app/src --out-dir app/out --source-maps --watch",
    "test": "tap test/",
    "start": "electron app",
    "compile": "rimraf app/out && babel app/src --out-dir app/out",
    "pack": "npm run compile && build --dir",
    "dist": "npm run compile && build",
    "release": "npm run compile && build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niklasi/proxy.git"
  },
  "keywords": [
    "proxy",
    "debugging",
    "testing",
    "http(s)"
  ],
  "author": "Niklas Ingholt",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/niklasi/proxy/issues"
  },
  "homepage": "https://github.com/niklasi/proxy#readme",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "electron": "^1.3.3",
    "electron-builder": "^5.30.0",
    "rimraf": "^2.5.4",
    "standard": "^8.0.0"
  },
  "dependencies": {},
  "babel": {
    "presets": [
      "react"
    ]
  },
  "standard": {
    "ignore": [
      "app/out/"
    ]
  },
  "build": {
    "files": [
      "**/*",
      "!**/node_modules/*/{README.md,README,readme.md,readme,test}",
      "!**/node_modules/.bin",
      "!**/*.{o,hprof,orig,pyc,pyo,rbc}",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,thumbs.db}",
      "!app/src${/*}"
    ],
    "asar": false,
    "appId": "com.ingholt.hallandproxy",
    "category": "public.app-category.development",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "remoteReleases": "https://github.com/nilkasi/halland-proxy",
      "publish": [
        "github",
        "bintray"
      ]
    },
    "linux": {
      "publish": null,
      "target": [
        "deb",
        "AppImage"
      ]
    }
  }
}
